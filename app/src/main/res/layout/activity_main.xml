<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#6798c0"
    android:weightSum="5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">
            <ImageView
                android:src="@drawable/logo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Senada"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:textSize="32sp"
                android:textColor="#fffdf7"
                android:textStyle="bold"
                android:fontFamily="@font/nexabold"
                android:textAllCaps="true"/>
        </LinearLayout>
    </RelativeLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:columnCount="1"
        android:rowCount="2"
        android:padding="8dp"
        android:background="@drawable/cardbg">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_list1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="15dp"
            android:layout_margin="14dp"
            android:padding="20dp"
            android:elevation="8dp"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:clickable="true"
            android:focusable="true"
            app:cardElevation="5dp">
            <LinearLayout
                android:orientation="vertical"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/listicon"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Local Songs"
                    android:layout_gravity="center"
                    android:textSize="22sp"
                    android:textColor="#6798c0"
                    android:fontFamily="@font/nexa"
                    android:textStyle="bold"
                    android:letterSpacing="0.3"/>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_list2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="15dp"
            android:layout_margin="14dp"
            android:padding="20dp"
            android:elevation="8dp"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:clickable="true"
            app:cardElevation="5dp">
            <LinearLayout
                android:orientation="vertical"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/listicon2"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Online Songs"
                    android:layout_gravity="center"
                    android:textSize="22sp"
                    android:textColor="#6798c0"
                    android:fontFamily="@font/nexa"
                    android:textStyle="bold"
                    android:letterSpacing="0.3"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>



    </GridLayout>



</LinearLayout>