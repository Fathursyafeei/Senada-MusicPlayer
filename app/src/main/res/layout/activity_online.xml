<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".OnlineActivity"
    android:orientation="vertical">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="120dp"
        android:layout_width="340dp"
        android:layout_height="320dp"
        app:lottie_fileName="not_found.json"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"/>
<!--        app:srcCompat="@drawable/notfound1"/>-->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oops!"
        android:layout_marginTop="12dp"
        android:layout_gravity="center_horizontal"
        android:textSize="28sp"
        android:textColor="#333"
        android:fontFamily="@font/nexabold"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The page your were looking for\ndoesn't exist"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:textColor="#333"
        android:textAlignment="center"
        android:fontFamily="@font/nexa"
        android:textStyle="bold"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/goBack"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:background="@drawable/rounded"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="Go to Home"
        android:textAllCaps="false"
        android:textColor="#fffdf7"
        android:textSize="22sp"
        android:fontFamily="@font/nexabold"
        android:textStyle="bold"
        android:elevation="8dp"/>




</LinearLayout>